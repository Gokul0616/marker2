# Production Environment Variables Template
# Copy this file to .env in your backend service and fill in the values

# Database Configuration
POSTGRES_URL=postgresql://username:password@host:port/database

# Redis Configuration (optional - fallback to PostgreSQL if not available)
REDIS_URL=redis://username:password@host:port

# JWT Secret Key (generate a strong random key)
JWT_SECRET_KEY=your-super-secret-jwt-key-generate-a-strong-one

# API Configuration
PORT=8000
HOST=0.0.0.0

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://your-netlify-site.netlify.app,https://your-custom-domain.com

# Application Settings
ENVIRONMENT=production
DEBUG=false

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=3
RATE_LIMIT_WINDOW=1800  # 30 minutes in seconds

# Database Settings
DATABASE_ECHO=false  # Set to true for SQL query logging in development